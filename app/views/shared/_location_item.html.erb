<% @extra_head_content = capture do %>
	<%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false" %>
	<%= javascript_include_tag "map" %>
<% end %>

<% if !(location_item.get_current_location[:lat].blank? or location_item.get_current_location[:long].blank?) %>
<script type="text/javascript">
	document.observe('dom:loaded', function() {
			initialize(<%= location_item.get_current_location[:lat] %>, <%= location_item.get_current_location[:long] %>);
	});
</script>
<% end %>