<h1>Listing users</h1>

<table>
  <tr>
    <th>Userid</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Email</th>
    <th>Administrator</th>
    <th>Address</th>
    <th>City</th>
    <th>Postcode</th>
    <th>Country</th>
    <th>Mobile</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.userid %></td>
    <td><%= user.firstname %></td>
    <td><%= user.lastname %></td>
    <td><%= user.email %></td>
    <td><%= user.administrator %></td>
    <td><%= user.address %></td>
    <td><%= user.city %></td>
    <td><%= user.postcode %></td>
    <td><%= user.country %></td>
    <td><%= user.mobile %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

