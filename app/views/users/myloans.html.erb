<h1>My Loans</h1>
<p id="notice"><%= notice %></p>
<% if @loans.empty? %>
	<span>You don't have any loans at the moment'</span>
<% else %>
        <table class="loans enum" summary="User loans">
          <%= render :partial => "loans/loan_item", :collection => @loans %>
        </table>
        <%= will_paginate @loans %>
<% end %>