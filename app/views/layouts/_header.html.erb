<header>
	<%= link_to logo, root_path %>
    <nav class="round">
      <ul>
        <li><%= link_to "Home", root_path %></li>
		<% if logged_in? %>
			<li><%= link_to "My details", current_user %></li>
			<li><%= link_to "My artefacts", myartefacts_user_path(current_user) %></li>
			<li><%= link_to "My loans", myloans_user_path(current_user) %></li>
			<li><%= link_to "Log out", logout_path, :method => :delete %></li>
		<% else %>
			<li><%= link_to "Log in", login_path %></li>
		<% end %>
      </ul>
    </nav>
		<% if logged_in? and current_user.admin?  %>
			<nav class="round">
				<ul>
					<li><%= link_to "All users", users_path %></li>
					<li><%= link_to "All loans", loans_path %></li>
				</ul>
				</nav>
		<% end%>
 </header>