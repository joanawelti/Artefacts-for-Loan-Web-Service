<tr>
	<table class="enum">
		<tr>
			<td>
				<h3><%= comment.user.userid %></h3>
			</td>
			<td>
				<span class="date"><%= comment.created_at.strftime("%d/%m/%Y") %></span>
			</td>
			<td>
				<% user = comment.user rescue User.find(comment.user_id) %>
				<% if current_user?(user) or current_user.admin? %>
					<span class="action_links">
						<%= link_to 'Edit comment', edit_comment_path(comment) %>
						<%= link_to 'Delete comment', comment,  :method => :delete,
                                 								:confirm => "You sure?",
                                 								:title => "Comment" %>
					</span>
				<% end %>
			</td>
		</tr>
		<tr>
			<td colspan="3">
				<span class="content"><%= comment.content %></span>
			</td>
		</tr>
	</table>
</tr>