<tr>
	<table class="artefact_item">
		<tr>
			<td>
				<h3><%= artefact.artefactid %></h3>
			</td>
			<td>
				<span  class="artefact_links">
					<%= link_to "show", artefact_path(artefact) %>
					<%= link_to "edit", edit_artefact_path(artefact) %>
					<% user = artefact.user rescue User.find(artefact.user_id) %>
					<% if current_user?(user) %>
						<%= link_to "delete", artefact, :method => :delete,
			                                     		:confirm => "You sure?",
			                                     		:title => artefact.name %>
					<% end %>
				</span>
			</td>
			</tr>
			<tr>
			<td>
				<%= image_tag artefact.photo.url(:thumb), :class => "artefact_thumbnail" %>
			</td>
			 	<td class="artefact">
			   	<h4 class="name"><%= artefact.name %></h4>
			   	<span class="description"><%= artefact.description %></span>
			</td>	
		</tr>	
	</table>	
</tr>