<%= form_tag({ :controller => 'artefacts', :action => 'search' }, :id => 'search_form' , :method => 'get' , :remote => true ) do  %>
	<%= text_field_tag :search_string, params[:search_string], :id => 'search_string' %>
  <%= submit_tag "Search", :name => nil %>
	<%= button_to_function "Reset", "$('search_string').clear(); $('search_form').submit()" %>
<% end %>