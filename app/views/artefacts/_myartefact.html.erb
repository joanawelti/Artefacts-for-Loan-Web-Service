<tr>
	<table class="enum">
		<tr>
			<td>
				<h3><%= myartefact.artefactid %></h3>
			</td>
			<td>
				<span  class="action_links">
					<%= link_to "edit", edit_artefact_path(myartefact) %>
					<% user = myartefact.user rescue User.find(myartefact.user_id) %>
					<% if current_user?(user) %>
						<%= link_to "delete", myartefact, :method => :delete,
			                                     		:confirm => "You sure?",
			                                     		:title => myartefact.name %>
					<% end %>
					<%= link_to "Details", artefact_path(myartefact), :class => "details" %>
				</span>
			</td>
		</tr>
		<%= render :partial => "artefacts/artefact_item_short", :object => myartefact %>
	</table>	
</tr>